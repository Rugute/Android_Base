<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerY="0.50"
                android:startColor="@color/progress_background"
                android:centerColor="@color/progress_background_dark"
                android:endColor="@color/progress_background" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.50"
                    android:startColor="@color/progress_secondary"
                    android:centerColor="@color/progress_secondary_dark"
                    android:endColor="@color/progress_secondary" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.50"
                    android:startColor="@color/progress_done"
                    android:centerColor="@color/progress_done_dark"
                    android:endColor="@color/progress_done" />
            </shape>
        </clip>
    </item>
</layer-list>